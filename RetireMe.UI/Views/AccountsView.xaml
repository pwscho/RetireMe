<UserControl x:Class="RetireMe.UI.Views.AccountsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:RetireMe.UI.Converters" 
             mc:Ignorable="d">

    <UserControl.Resources>
        <local:DecimalToPercentConverter x:Key="PercentConverter"/>
    </UserControl.Resources>

    <UserControl.DataContext>
        <Binding Path="AccountsVM"/>
    </UserControl.DataContext>


    <DockPanel Margin="10">

        <DataGrid ItemsSource="{Binding Accounts}"
                  SelectedItem="{Binding SelectedAccount}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserSortColumns="False">

            <DataGrid.Columns>

                <DataGridTextColumn Header="Owner" Binding="{Binding Owner}" IsReadOnly="True" />
                <DataGridTextColumn Header="Asset Class" Binding="{Binding AssetClass}" IsReadOnly="True"/>
                <DataGridTextColumn Header="Tax Bucket" Binding="{Binding TaxBucket}" IsReadOnly="True"/>
                <DataGridTextColumn Header="Value" Binding="{Binding Value}" />
                <DataGridTextColumn Header="Cost Basis" Binding="{Binding CostBasis}" />

                <DataGridTextColumn Header="Rate of Return (%)"
                    Binding="{Binding RateOfReturn,
                                      Mode=TwoWay,
                                      UpdateSourceTrigger=PropertyChanged,
                                      Converter={StaticResource PercentConverter}}"
                    Width="*"
                    IsReadOnly="False"/>




                <!-- Priority column with Up/Down buttons -->
                <DataGridTemplateColumn Header="Priority">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Margin="4"
                                        >

                                <!-- Priority number -->
                                <TextBlock Text="{Binding Priority}"
                                           Width="24"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           TextAlignment="Center"/>

                                <!-- Up button -->
                                <Button Content="▲"
                                        Width="24"
                                        Height="24"
                                        Margin="4,0,0,0"
                                        Command="{Binding DataContext.MoveUpCommand,
                                                          RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                        CommandParameter="{Binding}" />

                                <!-- Down button -->
                                <Button Content="▼"
                                        Width="24"
                                        Height="24"
                                        Margin="4,0,0,0"
                                        Command="{Binding DataContext.MoveDownCommand,
                                                          RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                        CommandParameter="{Binding}" />

                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

            </DataGrid.Columns>

        </DataGrid>

    </DockPanel>
</UserControl>
