<Window x:Class="RetireMe.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:RetireMe.UI.Views"
        Title="RetireMe" Height="600" Width="900">

    <DockPanel>

        <!-- Left Sidebar: Scenario Manager -->
        <Border DockPanel.Dock="Left"
                Width="220"
                Background="#F3F3F3"
                Padding="10"
                BorderBrush="#CCC"
                BorderThickness="0,0,1,0">

            <StackPanel>

                <TextBlock Text="Scenarios"
                           FontWeight="Bold"
                           FontSize="14"
                           Margin="0 0 0 10"/>

                <ListBox ItemsSource="{Binding ScenarioManager.Scenarios}"
                         SelectedItem="{Binding ScenarioManager.SelectedScenario}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name}" />
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <StackPanel Orientation="Horizontal"
                            Margin="0 10 0 0"
                            HorizontalAlignment="Center">

                    <Button Content="Add"
                            Width="60"
                            Margin="0 0 6 0"
                            Command="{Binding ScenarioManager.AddScenarioCommand}" />

                    <Button Content="Copy"
                            Width="60"
                            Margin="0 0 6 0"
                            Command="{Binding ScenarioManager.DuplicateScenarioCommand}" />

                    <Button Content="Delete"
                            Width="60"
                            Command="{Binding ScenarioManager.DeleteScenarioCommand}" />
                </StackPanel>

            </StackPanel>
        </Border>

        <!-- Main Content Area -->
        <TabControl>

            <TabItem Header="Scenario">
                <views:ScenarioView DataContext="{Binding ScenarioVM}"/>
            </TabItem>

            <TabItem Header="Accounts">
                <views:AccountsView DataContext="{Binding AccountsVM}"/>
            </TabItem>

            <TabItem Header="Social Security">
                <views:SocialSecurityView DataContext="{Binding SocialSecurityVM}"/>
            </TabItem>
            
            <TabItem Header="Income">
                <views:IncomeView DataContext="{Binding IncomeVM}"/>
            </TabItem>

            <TabItem Header="Withdrawals">
                <views:WithdrawalsView DataContext="{Binding WithdrawalsVM}" />
            </TabItem>

            <TabItem Header="Roth Conversions">
                <views:RothConversionView DataContext="{Binding RothConversionVM}"/>
            </TabItem>

            <TabItem Header="Results">
                <views:ResultsView/>
            </TabItem>

        </TabControl>

    </DockPanel>

</Window>

